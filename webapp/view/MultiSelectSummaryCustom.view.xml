<core:View xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout" xmlns="sap.m"
	controllerName="cross.fnd.fiori.inbox.view.MultiSelectSummary" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="{i18n>multi.summary.headerText}">
		<content>
			<Table id="idMultiSelectTable" inset="true" items="{path: ''}">
				<columns>
					<Column width="3em"></Column>
					<Column>
						<Text text="{i18n>multi.summary.title}"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="{i18n>multi.summary.createdBy}"/>
					</Column>
					
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="Vendor"/>
					</Column>					
					
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="Amount"/>
					</Column>
					
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="Currency"/>
					</Column>
					
				</columns>
				<items>
					<ColumnListItem vAlign="Middle" id="LIST_ITEM">
						<cells>
							<CheckBox selected="{multiSelectSummaryModel>Selected}" select="onItemSelect"/>
							<Text
								text="{parts: [{path: 'multiSelectSummaryModel>TaskTitle'}, 
									  {path: 'multiSelectSummaryModel>CustomAttributeData'}], 
									  formatter: 'cross.fnd.fiori.inbox.Conversions.formatterTaskTitle'}"/>
									  
							<Text text="{multiSelectSummaryModel>CreatedByName}"/>
							<Text text="{multiSelectSummaryModel>Vendor}"/>
							<Text text="{multiSelectSummaryModel>Value}"/>
							<Text text="{multiSelectSummaryModel>Currency}"/>
							
							
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</core:View>